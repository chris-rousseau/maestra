{# '@images/' refers to the Twig namespace defined earlier #}
<img src="{{ email.image('@images/mailing-maestra-top.png') }}" alt="Logo">

{% apply inline_css %}
    <style>
        {# here, define your CSS styles as usual #}
        h1, p {
            color: #42330d;
        }

        .container{
            max-width: 600px;
        }
        
    </style>

<div class="container">
    
    <h1>Bonjour {{ firstname }}, bienvenue sur Maestra !</h1>
    
    <p>
        Nous vous confirmons la création de votre compte sur le site <strong>maestra.fr</strong> et vous remercions pour votre confiance.
    </p>
    
    <p>
        Merci de cliquer sur ce lien pour activer votre compte :
         <a href="https://maestra.chrisdev.fr/confirm-email/{{token}}"><strong>https://maestra.chrisdev.fr/confirm-email/{{token}}</strong></a>
      
    
    </p>
    
    <p>
    Merci et à très bientôt !</p>
    <p><strong>L'équipe Maestra</strong></p>
</div>
{% endapply %}

<img src="{{ email.image('@images/mailing-maestra-bottom.png') }}" alt="Logo">
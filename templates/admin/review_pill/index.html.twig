{% extends 'base.html.twig' %}

{% block title %}Liste des avis{{ parent() }}
{% endblock %}


{% block body %}
	<div class="container-fluid px-4">
 <h1 class="fw-light">Liste des avis</h1>
        <table class="table table-hover mt-4">

            
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
            {# <th scope="col">Auteur</th> #}
            <th scope="col">Actions</th>
            
        </tr>
    </thead>
    <tbody>
      {% for review in reviews %}
        <tr>
            <td>{{review.id}}</td>
            <td>{{ review.title }}</td>
             {% if review.status == 0 %}
                <td class="text-danger"><strong>A valider</strong></td>
                {% endif %}
                 {% if review.status == 1 %}
                <td class="text-success">Valid√©</td>
            {% endif %}   
            {# <td>{{dump(review.user) }}</a></td> #}
        
            <td>
					<a href="{{ path('admin_pill_review_details', {id:review.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
			</td>
             <td class="text-right">
                       {% if review.status == 0 %}
                        <a href="{{ path('admin_pill_review_validate', {'id': review.id})}} " class="btn btn-sm btn-success">
                            <i class="far fa-check-circle"></i>
                        </a>
                             {% endif %}
                   <!-- Example single danger button -->
                        <div class="btn-group">
                        <a href="{{ path('admin_pill_review_delete', {'id': review.id})}}"  class="btn btn-sm btn-danger">
                            <i class="far fa-trash-alt"></i>
                        </a>
                           
                        </div>
                    </td>            
        </tr>
        	{% endfor %}
    </tbody>
</table>
{% endblock %}

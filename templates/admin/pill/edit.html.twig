{% extends 'base.html.twig' %}

{% block title %}Toutes les pilules{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container px-4 mx-0">
		<h1 class="mt-4">Edition de
			{{ pill.name }}</h1>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item">
				<a href="{{ path('admin_home') }}">Dashboard</a>
			</li>
			<li class="breadcrumb-item active">Edition d'une pilule</li>
		</ol>
		<div class="card mb-4">
			<div class="card-body">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

				{{ form_errors(form) }}
				<div class="row">
					<div class="col">{{ form_label(form.name, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.name, { 'attr': {'class': 'input-style'} }) }}</div>
					<div class="col">{{ form_label(form.generation, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.generation, { 'attr': {'class': 'select-style'} }) }}</div>
				</div>
				<div class="row">
					<div class="col">{{ form_label(form.description, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.description, { 'attr': {'class': 'textarea-style'} }) }}</div>
					<div class="col">{{ form_label(form.reimbursed, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.reimbursed) }}</div>
				</div>
				<div class="row">
					<div class="col">{{ form_label(form.composition, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.composition, { 'attr': {'class': 'textarea-style'} }) }}</div>
					<div class="col">{{ form_label(form.generic, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.generic, { 'attr': {'class': 'input-style'} }) }}</div>
				</div>
				<div class="row">
					<div class="col">{{ form_label(form.posology, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.posology, { 'attr': {'class': 'input-style'} }) }}</div>
					<div class="col">
						<span class="label-style">Interruption</span>
						{{ form_widget(form.interruption) }}</div>
				</div>
				<div class="row">
					<div class="col">{{ form_label(form.type, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.type, { 'attr': {'class': 'select-style'} }) }}</div>
					<div class="col">{{ form_label(form.delay_intake, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.delay_intake, { 'attr': {'class': 'input-style'} }) }}</div>
				</div>
				<div class="row">
					<div class="col">{{ form_label(form.laboratory, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.laboratory, { 'attr': {'class': 'input-style'} }) }}</div>
					<div class="col">{{ form_label(form.pillImg, null, { 'label_attr': {'class': 'label-style'} }) }}
						{{ form_widget(form.pillImg) }}
						<img src="{{ asset('uploads/pills/' ~ pill.picture) }}" width="250px" alt="Photo de la boite de la pilule {{ pill.name }}" class="mt-2 mb-2"></div>
				</div>
				<button type="submit" class="btn btn-success mt-4">Editer la pilule</button>
				<a class="btn btn-dark mt-4" href="{{ path('admin_pill_list') }}" role="button">Retourner Ã  la liste</a>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Toutes les pilules{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container-fluid px-4">
		<h1 class="mt-4">Edition de
			{{ pill.name }}</h1>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item">
				<a href="{{ path('admin_home') }}">Dashboard</a>
			</li>
			<li class="breadcrumb-item active">Edition d'une pilule</li>
		</ol>
		<div class="card mb-4">
			<div class="card-body">
				{{ form_start(form) }}

				{{ form_errors(form) }}

				<div class="form-group">
					{{ form_row(form.name) }}
				</div>
				<div class="form-group">
					{{ form_row(form.description) }}
				</div>
				<img src="{{ asset('uploads/pills/' ~ pill.picture) }}" width="250px" alt="Photo de la boite de la pilule {{ pill.name }}" class="mt-2 mb-2">
				<div class="form-group">
					{{ form_row(form.pillImg) }}
				</div>
				<div class="form-group">
					{{ form_row(form.reimbursed) }}
				</div>
				<div class="form-group">
					{{ form_row(form.generic) }}
				</div>
				<div class="form-group">
					{{ form_row(form.posology) }}
				</div>
				<div class="form-group">
					{{ form_row(form.type) }}
				</div>
				<div class="form-group">
					{{ form_row(form.generation) }}
				</div>
				<div class="form-group">
					{{ form_row(form.interruption) }}
				</div>
				<div class="form-group">
					{{ form_row(form.laboratory) }}
				</div>
				<div class="form-group">
					{{ form_row(form.delay_intake) }}
				</div>
				<div class="form-group">
					{{ form_row(form.composition) }}
				</div>
				<button type="submit" class="btn btn-success mt-4">Editer la pilule</button>
				<button type="submit" class="btn btn-dark mt-4">Retourner Ã  la liste</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}

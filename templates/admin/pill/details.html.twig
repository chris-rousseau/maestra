{% extends 'base.html.twig' %}

{% block title %}
	{{ pill.name }}{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container px-4 mx-0">
		<h1 class="mt-4">{{ pill.name }}
			- Détails</h1>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item">
				<a href="{{ path('admin_home') }}">Dashboard</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('admin_pill_list') }}">Liste des pilules</a>
			</li>
			<li class="breadcrumb-item active">{{ pill.name }}</li>
		</ol>
		<div class="card mb-4">
			<div class="card-body">

				<div class="text-center">
				<img src="{{ asset('uploads/pills/' ~ pill.picture) }}" width="250px" alt="Photo de la boite de {{ pill.name }}">
				</div>

			
				<table class="table">

	   <tbody>
        <tr>
                <th class="col-3">Nom</th>
                <td>{{ pill.name }}</td>
            </tr>
            <tr>
                <th>Laboratoire</th>
               	<td>{{ pill.laboratory }}</td>
            </tr>
            <tr>
                <th>Type</th>
				<td>{{ pill.type }}</td>
            </tr>
           <tr>
                <th>Génération</th>
				<td>{{ pill.generation }}</td>
            </tr>
          <tr>
                <th>Remboursement</th>
				{% if (pill.reimbursed == 0)%}
				<td>Non remboursé</td>
				{% else %}
			<td>{{ pill.reimbursed }} %</td>
			{% endif %}
            </tr>
        
		 <tr>
                <th>Interruption</th>
				{% if (pill.interruption == false)%}
				<td>Non</td>
				{% else %}
				<td>Oui</td>
			{% endif %}
            </tr>

			 <tr>
                <th>Posologie</th>
					<td>{{ pill.posology }}</td>
            </tr>
			
            <tr>
                <th>Délai d'oubli autorisé</th>
				<td>{{ pill.delayIntake }} heures</td>
            </tr>
			 <tr>
                <th>Description</th>
					<td>{{ pill.description }}</td>
            </tr>
			<tr>
                <th>Composition</th>
					<td>{{ pill.composition }}</td>
            </tr>
			 <tr>
                <th>Avis</th>
					<td>
								<i class="fas fa-comment"></i>
								{{ pill.countReviews }}</td>
            </tr>
			


        </tbody>
    </table>
<a class="btn btn-outline-primary" href="{{ path('admin_pill_edit', {id:pill.id}) }}">
											<i class="fas fa-edit"></i>
											Editer
										</a>
				
			</div>
		</div>
				<a class="btn btn-dark mb-2" href="{{ path('admin_pill_list') }}" role="button">Retourner à la liste</a>
	</div>
{% endblock %}
